<launch>

    <let name="urdf_path" value="$(find-pkg-share leo)/urdf/leopard.urdf.xacro" />
    <!-- 
    <let name="rviz_config" value="$(find-pkg-share leo)/rviz/display_leo.rviz" />
-->

    <node pkg="robot_state_publisher" exec="robot_state_publisher" name="rsp">
        <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <node pkg="joint_state_publisher" exec="joint_state_publisher" output="screen" />
    <!-- 
    <node pkg="rviz2" exec="rviz2" output="screen"
          args="-d $(var rviz_config)"/>
-->

    <include file="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py " />

    <node pkg="gazebo_ros" exec="spawn_entity"
        args="-topic robot_description -entity leo" />


</launch>